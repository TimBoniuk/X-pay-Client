<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="260dp"
        android:layout_height="620dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="105dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <TextView
            android:id="@+id/NameOfPos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Name of POS"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/POSNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="POS Number"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/POSTerminalNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="POS Terminal Number"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/POSTerminalPassWord"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="POS Terminal PassWord"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/POSPinPadID"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="POS PinPad ID"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ReplacementVoucherNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Replacement Voucher Number"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/ComPort"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Com Port"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SpeedandProtocal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Speed and Protocal"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/POSSystemDetailes"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:layout_marginStart="82dp"
        android:text="POS System Detailes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CompanyProfile"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="118dp"
        android:text="Company Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/POSSystemDetailes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/CustomerProfile"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="150dp"
        android:text="Customer Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/CompanyProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/POSAccess"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="96dp"
        android:text="POS Access"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/CustomerProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="260dp"
        android:layout_height="520dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="105dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/CompanyProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>



        <TextView
            android:id="@+id/CompanyName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Company Name"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_background"/>

        <TextView
            android:id="@+id/CompanyTAXNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Company TAX Number"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:layout_marginTop="22dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CompanyPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Company Phone Number"
            android:layout_marginTop="22dp"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Company Address"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:layout_marginTop="22dp"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="260dp"
        android:layout_height="490dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="105dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linear2"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Customer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/CustomerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Customer Name"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Phone Number"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Email Address"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="Password"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/AccountStatus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="72dp"
        android:text="Account Status"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/AccountStatus">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/statusbtn"
            android:gravity="center"
            android:text="Active"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/statusbtn2"
            android:gravity="center"
            android:text="Suspended /  InActive"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/addPos"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD POS"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>